<Window x:Class="WpfApp.view.DepartmentEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.view"
        mc:Ignorable="d"
        Title="Редактирование отдела" Height="192" Width="387" WindowStyle="ToolWindow" Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="176*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Наименование отдела" Grid.Column="1" HorizontalAlignment="Left" Margin="0,21,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textName" Grid.Column="2" HorizontalAlignment="Left" Margin="31,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonApply" Content="Применить" Grid.Column="1" HorizontalAlignment="Left" Margin="0,72,0,0" VerticalAlignment="Top" Width="90"/>
        <Button Content="Отмена" Grid.Column="2" HorizontalAlignment="Left" Margin="91,72,0,0" VerticalAlignment="Top" IsCancel="True" IsDefault="True" Width="66"/>

    </Grid>
</Window>
